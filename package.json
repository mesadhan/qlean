{
  "name": "qlean",
  "version": "1.0.0",
  "description": "QLean Bangla Team - Quran Reader App",
  "main": "dist/server/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --exec tsx src/server/index.ts",
    "dev2": "tsx watch src/server/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/public dist/ && cp -r src/views dist/",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop qlean",
    "pm2:restart": "pm2 restart qlean",
    "pm2:logs": "pm2 logs qlean",
    "pm2:delete": "pm2 delete qlean"
  },
  "keywords": [
    "quran",
    "express",
    "typescript",
    "bootstrap",
    "ejs"
  ],
  "author": "Sadhan Sarker",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
