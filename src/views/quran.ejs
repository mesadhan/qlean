<!-- Search Bar -->
<div class="row mb-4">
    <div class="col-12">
        <form action="/quran/search" method="GET">
            <div class="input-group input-group-lg shadow-sm">
                <span class="input-group-text bg-white"><i class="bi bi-search text-success"></i></span>
                <input type="text" class="form-control border-start-0" name="q" id="searchInput" 
                       placeholder="সূরা খুঁজুন... (আরবি বা বাংলা)"
                       value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-search me-1"></i> খুঁজুন
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Back to Home -->
<div class="mb-4">
    <a href="/" class="btn btn-outline-success">
        <i class="bi bi-arrow-left me-2"></i>হোমে ফিরে যান
    </a>
</div>

<!-- Quran Section -->
<section id="quran-section" class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="section-title">
            <i class="bi bi-book text-success me-2"></i>পবিত্র কুরআন
        </h3>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-success btn-sm active" id="gridViewBtn">
                <i class="bi bi-grid-3x3-gap"></i>
            </button>
            <button type="button" class="btn btn-outline-success btn-sm" id="listViewBtn">
                <i class="bi bi-list"></i>
            </button>
        </div>
    </div>
    
    <% if (typeof query !== 'undefined' && query) { %>
        <div class="alert alert-info mb-3">
            <i class="bi bi-search me-2"></i>"<strong><%= query %></strong>" এর জন্য <%= surahs.length %> টি ফলাফল পাওয়া গেছে
            <a href="/quran" class="btn btn-sm btn-outline-primary ms-2">সব দেখুন</a>
        </div>
    <% } %>
    
    <!-- Surahs Grid -->
    <div class="row g-3" id="surahsContainer">
        <% surahs.forEach(surah => { %>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2 surah-item">
                <a href="/surah/<%= surah.id %>" class="text-decoration-none">
                    <div class="card surah-card h-100 text-center">
                        <div class="card-body p-2 p-md-3">
                            <div class="surah-number-badge mb-2">
                                <span class="badge bg-success rounded-circle"><%= surah.id %></span>
                            </div>
                            <h6 class="card-title arabic-text mb-1" style="font-size: 1.1rem;"><%= surah.name %></h6>
                            <p class="card-text small text-muted mb-1"><%= surah.transliteration %></p>
                            <p class="card-text small text-muted mb-1"><%= surah.banglish %></p>
                            <small class="text-success"><%= surah.totalAyahs %> আয়াত</small>
                            
                            
                            <!-- <div class="mb-2 float-end">
                                <span class="badge bg-success"><%= surah.type %></span>
                            </div> -->
                            
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
    
    <% if (surahs.length === 0) { %>
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> কোনো সূরা পাওয়া যায়নি।
        </div>
    <% } %>
</section>

<style>
    /* Section Titles */
    .section-title {
        font-weight: 600;
        color: #333;
        border-bottom: 2px solid #198754;
        padding-bottom: 0.5rem;
        display: inline-block;
    }
    
    [data-bs-theme="dark"] .section-title {
        color: #fff;
    }
    
    /* Surah Cards */
    .surah-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.1);
        background-color: #fff;
    }
    
    .surah-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(25, 135, 84, 0.2);
        border-color: #198754;
    }
    
    .surah-number-badge .badge {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.85rem;
    }
    
    /* Dark Mode Styles */
    [data-bs-theme="dark"] .surah-card {
        background-color: #212529;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    [data-bs-theme="dark"] .surah-card:hover {
        box-shadow: 0 8px 25px rgba(25, 135, 84, 0.3);
        border-color: #198754;
    }
    
    [data-bs-theme="dark"] .surah-card .card-title {
        color: #fff;
    }
    
    [data-bs-theme="dark"] .surah-card .text-muted {
        color: #adb5bd !important;
    }
    
    /* List View */
    .list-view .surah-item {
        width: 100% !important;
        max-width: 100% !important;
        flex: 0 0 100% !important;
    }
    
    .list-view .surah-card {
        text-align: left !important;
    }
    
    .list-view .surah-card .card-body {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .list-view .surah-number-badge {
        margin-bottom: 0 !important;
    }
</style>

<script>
    // Grid/List View Toggle
    const gridViewBtn = document.getElementById('gridViewBtn');
    const listViewBtn = document.getElementById('listViewBtn');
    const surahsContainer = document.getElementById('surahsContainer');
    
    // Load saved view preference
    const savedView = localStorage.getItem('surahViewMode');
    if (savedView === 'list') {
        surahsContainer.classList.add('list-view');
        listViewBtn.classList.add('active');
        gridViewBtn.classList.remove('active');
    }
    
    gridViewBtn.addEventListener('click', () => {
        surahsContainer.classList.remove('list-view');
        gridViewBtn.classList.add('active');
        listViewBtn.classList.remove('active');
        localStorage.setItem('surahViewMode', 'grid');
    });
    
    listViewBtn.addEventListener('click', () => {
        surahsContainer.classList.add('list-view');
        listViewBtn.classList.add('active');
        gridViewBtn.classList.remove('active');
        localStorage.setItem('surahViewMode', 'list');
    });
</script>
