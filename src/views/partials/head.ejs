<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
<meta name="description" content="tazqianofs - Quran Reader App">
<meta name="theme-color" content="#198754">

<title><%= typeof title !== 'undefined' ? title + ' - tazqianofs' : 'tazqianofs - Quran Reader' %></title>

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">

<!-- Icons -->
<link rel="icon" type="image/svg+xml" href="/icons/icon.svg">

<style>
    :root {
        --arabic-font: 'Traditional Arabic', 'Scheherazade', serif;
        --arabic-text-size: 1.8rem;
    }
    
    /* ============================================
       QURAN FONT FAMILIES
       ============================================ */
    @import url('https://fonts.googleapis.com/css2?family=Scheherazade+New:wght@400;700&display=swap');
    
    .arabic-font-traditional {
        --arabic-font: 'Traditional Arabic', 'Scheherazade', serif;
    }
    
    .arabic-font-uthmani {
        --arabic-font: 'Scheherazade New', 'Traditional Arabic', serif;
    }
    
    .arabic-font-indopak {
        --arabic-font: 'IndoPak', 'Traditional Arabic', serif;
    }
    
    .arabic-font-tajweed {
        --arabic-font: 'Tajweed', 'Traditional Arabic', serif;
    }
    
    body {
        min-height: 100vh;
        padding-top: 56px;
    }
    
    .arabic-text {
        font-family: var(--arabic-font);
        font-size: var(--arabic-text-size);
        line-height: 2.5;
        direction: rtl;
        text-align: right;
        transition: font-family 0.3s ease, font-size 0.3s ease;
    }
    
    .translation-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #6c757d;
    }
    
    .surah-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }
    
    .surah-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .ayah-card {
        margin-bottom: 1.5rem;
        border-left: 4px solid #198754;
    }
    
    .loading-skeleton {
        animation: pulse 1.5s ease-in-out infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    [data-bs-theme="dark"] {
        --bs-body-bg: #1a1a1a;
        --bs-body-color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .ayah-card {
        border-left-color: #20c997;
    }

    /* Mobile Sidebar Styling */
    .offcanvas.offcanvas-start {
        width: 280px;
        border-right: none;
    }
    
    .sidebar-body {
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 1rem;
    }
    
    .sidebar-nav {
        flex: 1;
    }
    
    .sidebar-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        margin-bottom: 0.5rem;
        border-radius: 0.5rem;
        color: #333;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .sidebar-link:hover {
        background-color: rgba(25, 135, 84, 0.1);
        color: #198754;
    }
    
    .sidebar-link.active {
        background-color: #198754;
        color: #fff;
    }
    
    .sidebar-link i {
        font-size: 1.25rem;
    }
    
    .sidebar-footer {
        padding-top: 1rem;
        border-top: 1px solid #dee2e6;
    }
    
    /* Dark mode sidebar styles */
    [data-bs-theme="dark"] .offcanvas {
        background-color: #1a1a1a;
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .sidebar-link {
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .sidebar-link:hover {
        background-color: rgba(32, 201, 151, 0.15);
        color: #20c997;
    }
    
    [data-bs-theme="dark"] .sidebar-link.active {
        background-color: #20c997;
        color: #1a1a1a;
    }
    
    [data-bs-theme="dark"] .sidebar-footer {
        border-top-color: #333;
    }
    
    [data-bs-theme="dark"] .offcanvas-header {
        background-color: #0d6efd !important;
    }
    
    /* ============================================
       SETTINGS PANEL STYLES
       ============================================ */
    .settings-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        z-index: 1040;
        transition: opacity 0.3s ease;
    }
    
    .settings-overlay.active {
        display: block;
    }
    
    .settings-panel {
        position: fixed;
        top: 0;
        right: -300px;
        width: 280px;
        height: 100vh;
        background: #fff;
        box-shadow: -2px 0 10px rgba(0, 0, 0, 0.15);
        z-index: 1050;
        overflow-y: auto;
        transition: right 0.3s ease;
        margin-top: 56px;
        max-height: calc(100vh - 56px);
    }
    
    .settings-panel.active {
        right: 0;
    }
    
    .settings-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1rem;
        background: linear-gradient(135deg, #198754 0%, #13653b 100%);
        color: white;
        position: sticky;
        top: 0;
        z-index: 1051;
    }
    
    .settings-header h5 {
        color: white;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        margin-bottom: 0;
        font-size: 1.1rem;
    }
    
    .settings-close {
        background: none;
        border: none;
        color: white;
        font-size: 1.25rem;
        cursor: pointer;
        padding: 0;
        margin-left: 0.5rem;
    }
    
    .settings-close:hover {
        opacity: 0.8;
    }
    
    .settings-body {
        padding: 1rem;
    }
    
    .settings-section {
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .settings-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    
    .settings-label {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
    }
    
    .font-options {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .font-options .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.5rem;
        border-radius: 0.4rem;
        transition: background-color 0.2s ease;
        margin-bottom: 0;
    }
    
    .font-options .form-check:hover {
        background-color: rgba(25, 135, 84, 0.05);
    }
    
    .font-options .form-check-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0;
        cursor: pointer;
        flex: 1;
        font-size: 0.9rem;
    }
    
    .font-preview {
        display: inline-block;
        font-size: 1.8rem;
        width: 35px;
        text-align: center;
        flex-shrink: 0;
    }
    
    .size-control {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }
    
    .btn-size {
        background: none;
        border: none;
        color: #198754;
        font-size: 1.25rem;
        cursor: pointer;
        padding: 0;
        transition: transform 0.2s ease, color 0.2s ease;
    }
    
    .btn-size:hover {
        color: #0d6efd;
        transform: scale(1.1);
    }
    
    .btn-size:active {
        transform: scale(0.95);
    }
    
    .size-display {
        font-weight: 600;
        color: #333;
        min-width: 45px;
        text-align: center;
        font-size: 0.95rem;
    }
    
    .size-preset-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.4rem;
    }
    
    .size-preset {
        padding: 0.4rem 0.75rem;
        border: 1px solid #dee2e6;
        background: #fff;
        border-radius: 0.3rem;
        cursor: pointer;
        font-size: 0.8rem;
        transition: all 0.2s ease;
        font-weight: 500;
    }
    
    .size-preset:hover {
        border-color: #198754;
        color: #198754;
    }
    
    .size-preset.active {
        background: #198754;
        color: white;
        border-color: #198754;
    }
    
    .translation-display-options {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .translation-display-options .form-check {
        padding: 0.4rem 0.5rem;
        border-radius: 0.4rem;
        transition: background-color 0.2s ease;
        margin-bottom: 0;
    }
    
    .translation-display-options .form-check:hover {
        background-color: rgba(25, 135, 84, 0.05);
    }
    
    .translation-display-options .form-check-label {
        font-size: 0.9rem;
    }
    
    .translation-select-options {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .translation-language-group {
        padding: 0.6rem 0.75rem;
        background: #f8f9fa;
        border-radius: 0.3rem;
        border-left: 3px solid #198754;
    }
    
    .translation-language-group h6 {
        margin-bottom: 0.5rem;
        padding: 0;
        font-size: 0.85rem;
    }
    
    .form-check-sm {
        padding: 0.2rem 0;
        margin-bottom: 0;
    }
    
    .form-check-sm .form-check-input {
        margin-top: 0.3rem;
    }
    
    .form-check-sm .form-check-label {
        font-size: 0.8rem;
        margin-bottom: 0;
    }
    
    /* Dark mode settings panel */
    [data-bs-theme="dark"] .settings-panel {
        background: #1a1a1a;
    }
    
    [data-bs-theme="dark"] .settings-section {
        border-bottom-color: #333;
    }
    
    [data-bs-theme="dark"] .settings-label {
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .font-options .form-check:hover {
        background-color: rgba(32, 201, 151, 0.1);
    }
    
    [data-bs-theme="dark"] .btn-size {
        color: #20c997;
    }
    
    [data-bs-theme="dark"] .btn-size:hover {
        color: #0d6efd;
    }
    
    [data-bs-theme="dark"] .size-display {
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .size-preset {
        background: #2a2a2a;
        border-color: #444;
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .size-preset:hover {
        border-color: #20c997;
        color: #20c997;
    }
    
    [data-bs-theme="dark"] .size-preset.active {
        background: #20c997;
        color: #1a1a1a;
        border-color: #20c997;
    }
    
    [data-bs-theme="dark"] .translation-display-options .form-check:hover {
        background-color: rgba(32, 201, 151, 0.1);
    }
    
    [data-bs-theme="dark"] .translation-language-group {
        background: #2a2a2a;
        border-left-color: #20c997;
    }
    
    [data-bs-theme="dark"] .translation-language-group h6 {
        color: #20c997;
    }
    
    /* Responsive settings panel */
    @media (max-width: 768px) {
        .settings-panel {
            width: 260px;
            right: -260px;
        }
    }
</style>
