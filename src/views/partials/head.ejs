<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
<meta name="description" content="tazqianofs - Quran Reader App">
<meta name="theme-color" content="#198754">

<title><%= typeof title !== 'undefined' ? title + ' - tazqianofs' : 'tazqianofs - Quran Reader' %></title>

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">

<!-- Icons -->
<link rel="icon" type="image/svg+xml" href="/icons/icon.svg">

<style>
    :root {
        --arabic-font: 'Traditional Arabic', 'Scheherazade', serif;
    }
    
    body {
        min-height: 100vh;
        padding-top: 56px;
    }
    
    .arabic-text {
        font-family: var(--arabic-font);
        font-size: 1.8rem;
        line-height: 2.5;
        direction: rtl;
        text-align: right;
    }
    
    .translation-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #6c757d;
    }
    
    .surah-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }
    
    .surah-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .ayah-card {
        margin-bottom: 1.5rem;
        border-left: 4px solid #198754;
    }
    
    .loading-skeleton {
        animation: pulse 1.5s ease-in-out infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    [data-bs-theme="dark"] {
        --bs-body-bg: #1a1a1a;
        --bs-body-color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .ayah-card {
        border-left-color: #20c997;
    }

    /* Mobile Sidebar Styling */
    .offcanvas.offcanvas-start {
        width: 280px;
        border-right: none;
    }
    
    .sidebar-body {
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 1rem;
    }
    
    .sidebar-nav {
        flex: 1;
    }
    
    .sidebar-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        margin-bottom: 0.5rem;
        border-radius: 0.5rem;
        color: #333;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .sidebar-link:hover {
        background-color: rgba(25, 135, 84, 0.1);
        color: #198754;
    }
    
    .sidebar-link.active {
        background-color: #198754;
        color: #fff;
    }
    
    .sidebar-link i {
        font-size: 1.25rem;
    }
    
    .sidebar-footer {
        padding-top: 1rem;
        border-top: 1px solid #dee2e6;
    }
    
    /* Dark mode sidebar styles */
    [data-bs-theme="dark"] .offcanvas {
        background-color: #1a1a1a;
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .sidebar-link {
        color: #e0e0e0;
    }
    
    [data-bs-theme="dark"] .sidebar-link:hover {
        background-color: rgba(32, 201, 151, 0.15);
        color: #20c997;
    }
    
    [data-bs-theme="dark"] .sidebar-link.active {
        background-color: #20c997;
        color: #1a1a1a;
    }
    
    [data-bs-theme="dark"] .sidebar-footer {
        border-top-color: #333;
    }
    
    [data-bs-theme="dark"] .offcanvas-header {
        background-color: #0d6efd !important;
    }
</style>
