<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Dark Mode Script -->
<script>
    // Dark mode toggle function
    function toggleDarkMode() {
        const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';
        const desktopBtn = document.getElementById('darkModeToggle');
        const mobileBtn = document.getElementById('darkModeToggleMobile');
        
        if (isDark) {
            document.documentElement.setAttribute('data-bs-theme', 'light');
            if (desktopBtn) desktopBtn.innerHTML = '<i class="bi bi-moon-fill"></i>';
            if (mobileBtn) mobileBtn.innerHTML = '<i class="bi bi-moon-fill"></i> Dark Mode';
            localStorage.setItem('darkMode', 'false');
        } else {
            document.documentElement.setAttribute('data-bs-theme', 'dark');
            if (desktopBtn) desktopBtn.innerHTML = '<i class="bi bi-sun-fill"></i>';
            if (mobileBtn) mobileBtn.innerHTML = '<i class="bi bi-sun-fill"></i> Light Mode';
            localStorage.setItem('darkMode', 'true');
        }
    }
    
    // Dark mode persistence
    const darkMode = localStorage.getItem('darkMode') === 'true';
    if (darkMode) {
        document.documentElement.setAttribute('data-bs-theme', 'dark');
        const desktopBtn = document.getElementById('darkModeToggle');
        const mobileBtn = document.getElementById('darkModeToggleMobile');
        if (desktopBtn) desktopBtn.innerHTML = '<i class="bi bi-sun-fill"></i>';
        if (mobileBtn) mobileBtn.innerHTML = '<i class="bi bi-sun-fill"></i> Light Mode';
    }
    
    // Add click handlers to both toggle buttons
    const desktopBtn = document.getElementById('darkModeToggle');
    const mobileBtn = document.getElementById('darkModeToggleMobile');
    if (desktopBtn) desktopBtn.addEventListener('click', toggleDarkMode);
    if (mobileBtn) mobileBtn.addEventListener('click', toggleDarkMode);
    
    // Close mobile sidebar on link click
    function closeMobileSidebar() {
        const sidebarEl = document.getElementById('mobileSidebar');
        if (sidebarEl) {
            const bsOffcanvas = bootstrap.Offcanvas.getInstance(sidebarEl);
            if (bsOffcanvas) {
                bsOffcanvas.hide();
            }
        }
    }
    
    // Close sidebar on nav link click
    document.querySelectorAll('#mobileSidebar .sidebar-link').forEach(link => {
        link.addEventListener('click', closeMobileSidebar);
    });
</script>
